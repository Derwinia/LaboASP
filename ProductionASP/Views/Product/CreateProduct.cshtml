@model ProductionASP.Models.ProductCreateModel

@{
	ViewData["Title"] = "CreateProduct";
}
       
<h1>CreateProduct</h1>

<h4>ProductCreateModel</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="CreateProduct">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="@Model.Price" class="control-label"></label>
				<input asp-for="@Model.Price" type="number" class="form-control" step="0.01"/>
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Stock" class="control-label"></label>
				<input asp-for="Stock" class="form-control" />
				<span asp-validation-for="Stock" class="text-danger"></span>
			</div>
			<div class="form-group">
				<div class="input-field col s12">
					<select multiple class="MathSelect">
					  <option value="" disabled selected>Choose any category</option>
						@foreach (var item in Model.AllCategories)
						{
							<option value="@item.Id">@item.Name</option>
						}
					</select>
					<label>Materialize Multiple Select</label>
				</div>
			@*	<label asp-for="SelectedCategory" class="control-label">Category:</label>
				<select asp-for="SelectedCategory" class="form-select MathSelect">
					@foreach (var item in Model.AllCategories)
					{
							<option value="@item.Name">@item.Name</option>
					}
				</select>*@
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	}

@model ProductionASP.Models.ProductCreateModel

@{
	ViewData["Title"] = "CreateProduct";
}
       
<h1>CreateProduct</h1>

<h4>ProductCreateModel</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="CreateProduct">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Price" class="control-label"></label>
				<input asp-for="Price" type="number" class="form-control" step="0.1"/>
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Stock" class="control-label"></label>
				<input asp-for="Stock" class="form-control" />
				<span asp-validation-for="Stock" class="text-danger"></span>
			</div>
			<div class="input-field col s12">
				<select class="MathSelect" name="SelectedCategory" asp-for="SelectedCategory">
					<option value="" disabled selected>Choose a category</option>
					@foreach (var item in Model.AllCategories)
					{
						<option value="@item.Id">@item.Name</option>
					}
				</select>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	}
